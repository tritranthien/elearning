// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  progress           UserProgress[]
  topicProgress      UserTopicProgress[]
  conversationTopics ConversationTopic[]
}

model Topic {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  viTitle     String?
  slug        String   @unique
  description String?
  viDescription String?
  level       String
  image       String?
  color       String?  // for UI gradient (e.g. "from-blue-500 to-cyan-500")
  createdAt   DateTime @default(now())
  
  words       Word[]
  userProgress UserTopicProgress[]
}

// Track user's learning status for each topic
model UserTopicProgress {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  topicId   String   @db.ObjectId
  
  status    String?  // null = not set, "learning" = đang học, "completed" = đã xong
  startedAt DateTime?
  completedAt DateTime?
  
  user      User     @relation(fields: [userId], references: [id])
  topic     Topic    @relation(fields: [topicId], references: [id])
  
  @@unique([userId, topicId])
}

model Word {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  term          String
  definition    String   // English definition
  viDefinition  String?  // Vietnamese explanation
  translation   String?  // Vietnamese meaning (the core word)
  example       String   // English example
  viExample     String?  // Vietnamese example translation
  phonetic      String?
  type          String?  // noun, verb, adj
  
  audio         String?  // URL to audio file
  topicId       String?  @db.ObjectId  // Optional - null means uncategorized
  topic         Topic?   @relation(fields: [topicId], references: [id])
  
  progress    UserProgress[]
}

model UserProgress {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @db.ObjectId
  wordId       String    @db.ObjectId
  
  status       String    @default("new") // new, learning, mastered
  isIgnored    Boolean   @default(false)
  isSelected   Boolean   @default(false)
  nextReviewAt DateTime?
  lastReviewedAt DateTime?
  streak       Int       @default(0)
  
  user         User      @relation(fields: [userId], references: [id])
  word         Word      @relation(fields: [wordId], references: [id])

  @@unique([userId, wordId])
}

// Conversation Topic - organizes conversations by theme (similar to Topic for vocabulary)
model ConversationTopic {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  title         String   // Topic title (e.g., "Đi mua sắm", "Ở nhà hàng")
  description   String?  // Optional description
  color         String?  // UI color for the topic card
  icon          String?  // Emoji icon for the topic
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  conversations Conversation[] // All conversations in this topic
  phrases       Phrase[]       // All phrases learned in this topic
  suggestions   ConversationSuggestion[] // Pre-generated suggestions
  
  user          User     @relation(fields: [userId], references: [id])
}

// Conversation practice - stores user's spoken sentences within a topic
model Conversation {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  userId         String   @db.ObjectId
  vietnameseText String   // Original Vietnamese text from speech
  englishText    String   // Translated English text
  speaker        String   @default("A") // Who is speaking: "A" or "B"
  createdAt      DateTime @default(now())
  
  topicId        String   @db.ObjectId
  topic          ConversationTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  
  phrases        Phrase[] // Phrases extracted from this conversation
}

// Phrases extracted from conversations for learning
model Phrase {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  english         String   // English phrase/word
  vietnamese      String   // Vietnamese meaning
  phonetic        String?  // IPA pronunciation
  partOfSpeech    String?  // noun, verb, phrase, etc.
  example         String?  // Example usage in a sentence
  viExample       String?  // Vietnamese translation of example
  isIgnored       Boolean  @default(false) // User can ignore phrases they don't want to learn
  
  topicId         String   @db.ObjectId
  topic           ConversationTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  
  conversationId  String   @db.ObjectId
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  
  @@unique([conversationId, english]) // Prevent duplicate phrases within same conversation
}

// Pre-generated conversation suggestions to reduce API calls
model ConversationSuggestion {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  topicId         String   @db.ObjectId
  topic           ConversationTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  
  // The suggestion content
  vietnameseText  String   // Suggested Vietnamese sentence
  englishText     String   // Suggested English translation
  speaker         String   // "A" or "B" - who should say this
  
  // Context - generated after which conversation?
  afterConversationId String? @db.ObjectId // If null, it's an initial suggestion
  
  // Metadata
  isUsed          Boolean  @default(false) // True if user selected this suggestion
  createdAt       DateTime @default(now())
  
  @@index([topicId, isUsed])
}
