// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  progress     UserProgress[]
}

model Topic {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  viTitle     String?
  slug        String   @unique
  description String?
  viDescription String?
  level       String
  image       String?
  color       String?  // for UI gradient (e.g. "from-blue-500 to-cyan-500")
  createdAt   DateTime @default(now())
  
  words       Word[]
}

model Word {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  term          String
  definition    String   // English definition
  viDefinition  String?  // Vietnamese explanation
  translation   String?  // Vietnamese meaning (the core word)
  example       String   // English example
  viExample     String?  // Vietnamese example translation
  phonetic      String?
  type          String?  // noun, verb, adj
  
  audio         String?  // URL to audio file
  topicId       String?  @db.ObjectId  // Optional - null means uncategorized
  topic         Topic?   @relation(fields: [topicId], references: [id])
  
  progress    UserProgress[]
}

model UserProgress {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @db.ObjectId
  wordId       String    @db.ObjectId
  
  status       String    @default("new") // new, learning, mastered
  isIgnored    Boolean   @default(false)
  isSelected   Boolean   @default(false)
  nextReviewAt DateTime?
  lastReviewedAt DateTime?
  streak       Int       @default(0)
  
  user         User      @relation(fields: [userId], references: [id])
  word         Word      @relation(fields: [wordId], references: [id])

  @@unique([userId, wordId])
}

// Conversation practice - stores user's spoken sentences
model Conversation {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  vietnameseText String  // Original Vietnamese text from speech
  englishText   String   // Translated English text
  createdAt     DateTime @default(now())
  
  phrases       Phrase[] // Extracted phrases from this conversation
}

// Phrases extracted from conversations for learning
model Phrase {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  english         String   // English phrase/word
  vietnamese      String   // Vietnamese meaning
  phonetic        String?  // IPA pronunciation
  partOfSpeech    String?  // noun, verb, phrase, etc.
  example         String?  // Example usage in a sentence
  viExample       String?  // Vietnamese translation of example
  
  conversationId  String   @db.ObjectId
  conversation    Conversation @relation(fields: [conversationId], references: [id])
  
  createdAt       DateTime @default(now())
}
